<article class='outer-container'>
  <section class="carousel">
    <swiper
      continuous="true"
      speed="2000"
      identifier="swiper_1"
      auto="8000"
      paginator="true"
      tall="false"
      >
        <!-- Kara: EE populates these slides -->
        <slide
          image-url=''
          background-color=""
          quote=""
          video-url=""
          link-url=""
          headline=""
          body-copy=""
          logo-image-url=""
          link-style=""
          link-text=""
        >
        </slide>
    </swiper>
  </section>
  <h1>{headline}</h1>
  <p>{body}</p>

  <hr class="separator"/>
  <!-- Kara: EE populates these articles -->
  <article>
    <div class="image" style="background-image: url('{thumbnail_image_url}');background-size: cover;">
    </div>
    <div class="content">
      <h1>{title}</h1>
      {content}"
      <p class="call-toaction">
        <a href="{call_to_action_url}">{call_to_action_text}</a>
      </p>
    </div>
  </article>

</article>
